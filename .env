# Example environment configuration
# Copy this file to .env and update with your values

# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-here
DEBUG=True

# Database Configuration
# Use SQLite for local development (comment out for PostgreSQL in production)
# DATABASE_URL=postgresql://platformadmin:5514@localhost:5432/krystal_platform

# Application Settings
APP_PORT=8080
APP_HOST=0.0.0.0

# Currency Exchange Rates (CNY to HKD)
CNY_TO_HKD_RATE=1.0732

# Security Settings
SESSION_PERMANENT=False
SESSION_TYPE=filesystem

# SSO Configuration (Integrated Business Platform)
# Set SSO_ENABLED=true to enable SSO authentication
SSO_ENABLED=false
SSO_BASE_URL=http://localhost:8080
SSO_SECRET_KEY=your-sso-secret-key

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=app.log
